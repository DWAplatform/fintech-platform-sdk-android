<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemlist_container"
    android:background="@color/white"
    android:layout_marginBottom="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/listitem_icon"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/white"
        android:layout_centerVertical="true"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/listitem_icon_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/cashin">
        </ImageView>

        <ImageView
            android:id="@+id/listitem_error"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="9dp"
            android:background="@drawable/ic_alert_triangle"
            />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listitem_icon"
        android:layout_toRightOf="@id/listitem_icon"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/listitem_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Ricarica da carta di credito"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/listitem_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31-01-2017 17:19:52"
            android:textColor="@android:color/black"
            android:textSize="12dp" />
    </LinearLayout>



    <TextView
        android:text="+200,00 â‚¬"
        android:textSize="20dp"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/listitem_amount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"/>

    <!--<View-->
    <!--android:id="@+id/listitem_newitem"-->
    <!--android:layout_width="20dp"-->
    <!--android:layout_height="20dp"-->
    <!--android:layout_marginLeft="8dp"-->
    <!--android:background="@drawanormal_transactiontion"/>-->


</RelativeLayout>